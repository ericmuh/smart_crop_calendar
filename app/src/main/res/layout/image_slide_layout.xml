<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_ll"
      android:paddingRight="@dimen/margin_ll"
      android:paddingTop="@dimen/margin_l"
      android:weightSum="100"
      >

    <TextView
        android:id="@+id/slide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="40"
        android:fontFamily="@font/bariol_bold"
        android:text="Hey, What would you like to learn today ?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:src="@drawable/refer_icon"
        >

    </ImageView>
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@null"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@null"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="80dp"
          android:background="#f8fafb"
          android:orientation="vertical"
          >

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >

        <LinearLayout
            android:id="@+id/ll_firstcoureses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_ll"
            android:layout_marginRight="@dimen/margin_ll"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2"
            >

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:clickable="true"
              android:focusable="true"
              app:cardCornerRadius="14dp"
              app:cardElevation="0dp"
              app:cardPreventCornerOverlap="false"
              >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

              <ImageView
                  android:id="@+id/image"
                  android:layout_width="match_parent"
                  android:layout_height="320dp"
                  android:scaleType="centerCrop"
                  android:src="@drawable/slide_one"
                  />

              <TextView
                  android:id="@+id/slide_description"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:fontFamily="@font/bariol_regular"
                  android:gravity="center_vertical"
                  android:paddingBottom="10dp"
                  android:paddingLeft="20dp"
                  android:paddingRight="20dp"
                  android:paddingTop="10dp"
                  android:text="Description"
                  android:textColor="#000000"
                  android:textSize="@dimen/text_l"
                  />


            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </LinearLayout>

      </LinearLayout>
    </RelativeLayout>

  </LinearLayout>
</LinearLayout>